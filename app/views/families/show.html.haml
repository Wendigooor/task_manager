%h3
  Family
  %i= @family.name

%h3 Members

%table.table.table-striped
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email
      %th Role
      %th{:colspan => "3"}
  %tbody
    - @family.users.each do |user|
      %tr
        %th= user.first_name
        %th= user.last_name
        %th= user.email
        %th= user_role(user, @family)
        %th
          = link_to 'Remove', family_member_path(@family, user_id: user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'


%hr
%p= link_to "New Member", new_family_member_path(@family), class: 'btn btn-sm btn-primary'
%p= link_to "Dashboard", root_path, class: 'btn btn-sm btn-success'
