- comments.each do |comment|
  %li
    = comment.body
    %small= comment.created_at
    = simple_form_for [comment, Comment.new] do |f|
      = f.text_area :body
      = f.hidden_field :task_id, value: @task.id
      = f.submit
    %ul
      = render partial: 'comments', locals: { comments: task.all_comments.select {|c| c.commentable_id == comment.id }, task: task }
