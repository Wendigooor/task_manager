%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .form-inputs
    = f.input :first_name, required: true, autofocus: true
    = f.input :last_name, required: true, autofocus: true
    = f.input :email, required: true
    = f.input :password, required: true
    = f.input :password_confirmation, required: true
    / = f.input :role, as: :radio_buttons, collection: Role.names.to_a, value_method: :first, required: true, checked: Role.names.to_a.first
    = simple_fields_for :family do |o|
      = o.label :family
      = o.input :id, collection: Family.all, label_method: :name, label: false, value_method: :id, prompt: "New Family..", required: false
      = o.input :name, placeholder: 'Enter Family Name', label: false, required: true


  .form-actions
    = f.button :submit, "Sign up", class: 'btn btn-success'

= render "devise/shared/links"
